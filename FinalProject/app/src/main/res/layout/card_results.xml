<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    app:cardBackgroundColor="#F4EAA5"
    app:cardCornerRadius="4dp">

    <TextView
        android:id="@+id/resultItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:padding="4dp"
        android:text="Item Name"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right|center_vertical|end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/resultResult"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right|center_vertical"
            android:padding="4dp"
            android:text="Results" />

        <ProgressBar
            android:id="@+id/resultsBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right" />
    </LinearLayout>

</androidx.cardview.widget.CardView>